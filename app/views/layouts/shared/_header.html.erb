<header class="primary-header">
  <div class="logo">
    <%= link_to (image_tag 'layout/header/logo.png', alt: global_site_settings['Name']), root_url, title: global_site_settings['Name'] %>
  </div>

  <nav class="primary-navigation-wrap">
    <%= link_to (image_tag 'components/icons/menu-icon.jpg'), '#', class: 'mobile-menu toggle-class', data: { container: '.primary-navigation, .small-focus-banner, .content-focus', class: 'hide-for-small-only', return: 'false' } %>
    <ul class="primary-navigation hide-for-small-only">
      <%= nested_menu_items(menu_items: @header_menu.menu_items) %>
    </ul>
  </nav>
</header>
